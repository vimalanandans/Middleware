<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:layout_margin="2dp" android:background="@drawable/list_selector">

    <ImageView
        android:id="@+id/list_image"
        android:contentDescription="@string/app_name"
        android:layout_width="60dip"
        android:layout_height="60dip"
        />
    <TextView
        android:id="@+id/mainItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_image"
        android:layout_marginLeft="15dip"
        android:paddingBottom ="10dip"
        android:layout_centerVertical="true"
        android:text="@string/strItemTitle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/list_item_color"
        android:textStyle="bold"         />
    <!-- Weather Information-->
    <TextView
        android:id="@+id/mainItemHint"
        android:text="@string/strItemHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainItemTitle"
        android:layout_toRightOf="@+id/list_image"
        android:layout_marginLeft="15dip"
        android:layout_marginTop ="10dip"
        android:textColor="@color/list_item_hint_color"
        android:ellipsize="end"
        android:layout_centerHorizontal="true"

        android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle" />
    <ToggleButton
        android:id="@+id/listToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4px"
        android:layout_marginRight="10px"
        android:button="@null"
        android:textOff="OFF"
        android:textOn="ON"
        android:visibility="invisible"
        android:focusable="false"
        android:focusableInTouchMode="false"

        >
    </ToggleButton>

    <ImageView
        android:id="@+id/warningIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_warning"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:visibility="gone"/>
</RelativeLayout>