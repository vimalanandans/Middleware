<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.bezirk.middleware.android.StreamingTestActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stream_receiver_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Choose a file"
                android:text="Stream Receiver"
                android:textSize="25sp" />

            <Button
                android:id="@+id/stream_receiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stream_receiver_activity"
                android:layout_centerHorizontal="true"
                android:onClick="streamReceiverOnClick"
                android:text="Stream Receiver" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stream_sender_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="81dp"
                android:gravity="center"
                android:text="Send Stream"
                android:textSize="25sp" />

            <Button
                android:id="@+id/stream_sender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/stream_receiver_activity"
                android:layout_centerHorizontal="true"
                android:onClick="streamSenderOnClick"
                android:text="Send Stream" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
