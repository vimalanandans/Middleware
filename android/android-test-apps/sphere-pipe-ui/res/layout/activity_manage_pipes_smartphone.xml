<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bezirk.spheremanager.ManagePipesActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/pipe_detail"
            android:layout_width="48dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_pipe" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_of_pipe"
                style="@style/Heading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#808080" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/filter_policies"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.50"
            android:background="@color/buttonActive"
            android:text="Policies" />

        <Button
            android:id="@+id/filter_spheres"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_weight=".50"
            android:background="@color/buttonInactive"
            android:text="Spheres" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#808080" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/filter_policies_outbound"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginRight="1dp"
            android:layout_weight="0.50"
            android:background="@color/buttonActive"
            android:text="Outbound" />

        <Button
            android:id="@+id/filter_policies_inbound"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_weight=".50"
            android:background="@color/buttonInactive"
            android:text="Inbound" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/management_container_in_activity"
        android:name="com.bosch.upa.spheremanager.ui.PipeManagementFragment"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_weight="1"
        tools:layout="@android:layout/list_content"></FrameLayout>


</LinearLayout>