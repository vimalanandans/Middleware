<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_deviceservice_support"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <CheckBox
            android:id="@+id/check_policy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4px"
            android:layout_marginRight="10px"
            android:focusable="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/policy_name"
                style="@style/ListItem" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/policy_reason"
                    style="@style/ListItemMedium" />

                <TextView
                    android:id="@+id/policy_changed"
                    style="@style/ListItemMediumHint"
                    android:layout_marginLeft="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>