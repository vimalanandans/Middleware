<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bezirk.middleware.android.ui">

    <application
        android:allowBackup="true"
        android:icon="@drawable/bezirk_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="icon, label, theme">
        <activity
            android:name="com.bezirk.middleware.android.ControlActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bezirk.middleware.android.DeviceControlActivity"
            android:label="@string/title_activity_device_control"></activity>

        <activity
            android:name="com.bezirk.middleware.android.DeviceTypeSelection"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Device Type Selection"></activity>

    </application>

</manifest>
